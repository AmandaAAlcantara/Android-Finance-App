    <style name="SpecificsImageChange"><item name="android:src">@drawable/specifics_grey</item></style>
    <style name="NewsImageChange"><item name="android:src">@drawable/news_grey</item></style>
    <style name="OptimizeImageChange"><item name="android:src">@drawable/optimize_grey</item></style>



</resources>